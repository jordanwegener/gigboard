<main>
  <div class = "content-container">
    <h1>View Band</h1>
    <div class="card">
      <h4><strong>Band name:</strong> <%= @band.name %></h4>
      <p><strong>Style:</strong> <%= @band.style %></p>
      <p><strong>Location:</strong> <%= @band.location %></p>
      <p><strong>Description:</strong></p>
      <p><%= @band.description %></p>
      <hr>
      <% if @band.demo %>
        <h5><strong>Band demo:</strong></h5>
        <audio src="<%= @band.demo %>" type="audio/mp3" controls style="width: 100%"%>Can't play audio.</audio>
      <% end %>
    </div>
    <% if current_user && @band.user == current_user %>
      <div class="button-bottom-right">
        <%= link_to "Edit Band", edit_band_path(@band), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</main>
